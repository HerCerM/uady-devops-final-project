def get_last_successful_build() {
  def buildJobName = Jenkins.instance.getItemByFullName('Jobs/uadybuild')
  def lastBuildId = buildJobName.getLastSuccessfulBuild()
  return lastBuildId
}

def get_build_id() {
  def buildJobName = Jenkins.instance.getItemByFullName('Jobs/uadybuild')
  def lastBuildId = buildJobName.getLastSuccessfulBuild()
  return lastBuildId
}

def git_branch_name

pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                echo "checking out project"
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/HerCerM/uady-devops-final-project.git'
                
                script {
                    git_branch_name = "${GIT_BRANCH}"
                }
                echo "${GIT_BRANCH} checked out"
            }
        }

    }
    post {
        success {
            echo "Build success"
            echo git_branch_name
            //call other job
        }
    }
}